{% comment %}
  The share buttons share the home page URL. The share text is grabbed from the store
  meta description.
{% endcomment %}

{% layout 'password' %}
<div id="Login" class="login-page-content">
  {% form 'storefront_password' %}
    {{ form.errors | default_errors }}
    <label for="password">Store Preview Password</label>
    <input type="password"
      name="password"
      id="Password"
      placeholder="{{ 'general.password_page.login_form_password_placeholder' | t }}">
    <button type="submit" name="commit" class="btn btn--beige">
      {{ 'general.password_page.login_form_submit' | t }}
    </button>
  {% endform %}
</div>
