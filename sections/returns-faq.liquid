<h2 class="returns-faq__title">
  Return Policy & F.A.Q.s
</h2>

<div class="returns-faq-questions container">
  {% for block in section.blocks %}
    <div class="returns-faq">
      <h4 class="returns-faq__question">{{ block.settings.question }}</h4>
      <p class="returns-faq__answer">{{ block.settings.answer }}</p>
    </div>
  {% endfor %}
</div>

{% schema %}
  {
    "name": "Returns FAQ",
    "class": "returns-faq__section",
    "blocks": [
      {
        "type": "faq",
        "name": "FAQ",
        "settings": [
          {
            "type": "text",
            "id": "question",
            "label": "Question"
          },
          {
            "type": "textarea",
            "id": "answer",
            "label": "Answer"
          }
        ]
      }
    ]
    
  }
{% endschema %}
